<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingStart="@dimen/hey_content_horizontal_distance"
        android:paddingEnd="@dimen/hey_content_horizontal_distance"
        android:paddingTop="@dimen/watch_safe_padding"
        android:paddingBottom="@dimen/hey_content_horizontal_distance"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:orientation="vertical">

            <com.heytap.wearable.support.widget.HeyTextView
                android:id="@+id/dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="操作"
                android:textSize="@dimen/hey_m_title"
                android:layout_marginBottom="@dimen/hey_distance_4dp" />

            <LinearLayout
                android:id="@+id/action_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:showDividers="middle"
                android:divider="@drawable/space_8px">

                <com.heytap.wearable.support.widget.HeyButton
                    android:id="@+id/button_favorite"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hey_button_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_settings_pill"
                    android:gravity="center"
                    android:text="收藏"
                    android:textSize="@dimen/hey_s_title" />

                <com.heytap.wearable.support.widget.HeyButton
                    android:id="@+id/button_watch_later"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hey_button_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_settings_pill"
                    android:gravity="center"
                    android:text="稍后再看"
                    android:textSize="@dimen/hey_s_title" />

                <com.heytap.wearable.support.widget.HeyButton
                    android:id="@+id/button_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hey_button_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_settings_pill"
                    android:gravity="center"
                    android:text="取消"
                    android:textSize="@dimen/hey_s_title" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hey_content_horizontal_distance_6_0" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
