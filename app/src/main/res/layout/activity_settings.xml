<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/watch_safe_padding">

            <include layout="@layout/item_settings_header" />

            <LinearLayout
                android:id="@+id/cache_stepper_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_settings_card"
                android:baselineAligned="true"
                android:baselineAlignedChildIndex="0"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <com.heytap.wearable.support.widget.HeyTextView
                    android:id="@+id/text_cache_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="缓存上限"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/hey_s_title" />

                <com.heytap.wearable.support.widget.HeyTextView
                    android:id="@+id/button_cache_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:textColor="@android:color/white"
                    android:text="-"
                    android:textSize="@dimen/hey_s_title" />

                <com.heytap.wearable.support.widget.HeyTextView
                    android:id="@+id/text_cache_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:includeFontPadding="false"
                    android:text="50MB"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/hey_s_title" />

                <com.heytap.wearable.support.widget.HeyTextView
                    android:id="@+id/button_cache_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:textColor="@android:color/white"
                    android:text="+"
                    android:textSize="@dimen/hey_s_title" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
