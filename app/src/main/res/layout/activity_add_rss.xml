<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_rss_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/watch_safe_padding">

            <com.heytap.wearable.support.widget.HeyTextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="添加 RSS"
                android:textSize="@dimen/hey_m_title" />

            <LinearLayout
                android:id="@+id/container_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.heytap.wearable.support.widget.HeyTextView
                    android:id="@+id/text_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="RSS 地址"
                    android:textSize="@dimen/hey_s_title" />

                <EditText
                    android:id="@+id/input_url"
                    style="@style/HeyEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:hint="https://example.com/feed.xml"
                    android:imeOptions="actionDone"
                    android:inputType="textUri"
                    android:maxLines="1" />

                <com.heytap.wearable.support.widget.HeyTextView
                    android:id="@+id/text_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="#ED4735"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/container_error_actions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.heytap.wearable.support.widget.HeyButton
                        android:id="@+id/button_retry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="重试" />

                    <com.heytap.wearable.support.widget.HeyButton
                        android:id="@+id/button_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="取消" />
                </LinearLayout>

                <com.heytap.wearable.support.widget.HeyButton
                    android:id="@+id/button_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:text="添加" />

                <com.heytap.wearable.support.widget.HeyTextView
                    android:id="@+id/text_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="支持 RSS/Atom/RDF，添加后自动拉取内容"
                    android:textSize="@dimen/hey_s_desription" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:visibility="gone">

                <com.heytap.wearable.support.widget.HeyTextView
                    android:id="@+id/text_preview_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="频道标题"
                    android:textSize="@dimen/hey_s_title" />

                <com.heytap.wearable.support.widget.HeyTextView
                    android:id="@+id/text_preview_site"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/hey_s_desription" />

                <com.heytap.wearable.support.widget.HeyTextView
                    android:id="@+id/text_preview_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="频道简介"
                    android:textSize="@dimen/hey_s_desription" />

                <com.heytap.wearable.support.widget.HeyButton
                    android:id="@+id/button_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:text="确认添加" />

                <com.heytap.wearable.support.widget.HeyButton
                    android:id="@+id/button_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:text="修改地址" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_existing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <com.heytap.wearable.support.widget.HeyTextView
                    android:id="@+id/text_existing_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="已存在该订阅"
                    android:textSize="@dimen/hey_s_title" />

                <com.heytap.wearable.support.widget.HeyButton
                    android:id="@+id/button_go_channel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:text="跳转频道" />

                <com.heytap.wearable.support.widget.HeyButton
                    android:id="@+id/button_existing_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:text="返回" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
