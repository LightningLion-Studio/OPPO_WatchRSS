<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/hey_distance_6dp"
    app:dragEdge="right">

    <LinearLayout
        android:id="@+id/swipe_actions"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/hey_distance_4dp"
        android:paddingRight="@dimen/hey_distance_4dp">

        <com.heytap.wearable.support.widget.HeyTextView
            android:id="@+id/action_move_top"
            android:layout_width="@dimen/watch_swipe_action_button_width"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/hey_distance_4dp"
            android:background="@drawable/bg_swipe_action_button"
            android:gravity="center"
            android:paddingLeft="@dimen/hey_distance_8dp"
            android:paddingRight="@dimen/hey_distance_8dp"
            android:text="移到顶"
            android:textColor="@android:color/white"
            android:textSize="@dimen/feed_card_action_text_size" />

        <com.heytap.wearable.support.widget.HeyTextView
            android:id="@+id/action_mark_read"
            android:layout_width="@dimen/watch_swipe_action_button_width"
            android:layout_height="match_parent"
            android:background="@drawable/bg_swipe_action_button"
            android:gravity="center"
            android:paddingLeft="@dimen/hey_distance_8dp"
            android:paddingRight="@dimen/hey_distance_8dp"
            android:text="标记已读"
            android:textColor="@android:color/white"
            android:textSize="@dimen/feed_card_action_text_size" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/swipe_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/swipe_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <com.heytap.wearable.support.widget.HeyMultipleDefaultItem
            android:id="@+id/home_entry_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_settings_card" />
    </FrameLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>
