<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_add_rss_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/hey_distance_6dp"
    android:paddingTop="@dimen/hey_distance_4dp"
    android:paddingBottom="@dimen/hey_distance_4dp">

    <FrameLayout
        android:id="@+id/button_add_rss"
        android:layout_width="@dimen/hey_button_height"
        android:layout_height="@dimen/hey_button_height"
        android:layout_gravity="center"
        android:background="@drawable/bg_add_rss_button"
        android:clickable="true"
        android:contentDescription="添加RSS"
        android:focusable="true">

        <com.heytap.wearable.support.widget.HeyTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="+"
            android:textColor="@android:color/white"
            android:textSize="@dimen/hey_s_title" />
    </FrameLayout>
</FrameLayout>
