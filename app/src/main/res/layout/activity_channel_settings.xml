<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/watch_safe_padding">

            <include layout="@layout/item_settings_header" />

            <LinearLayout
                android:id="@+id/original_content_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/hey_content_horizontal_distance"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_channel_original_content"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hey_multiple_item_height"
                    android:background="@drawable/bg_settings_pill"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/hey_content_horizontal_distance_6_0"
                    android:paddingRight="@dimen/hey_distance_10dp"
                    android:paddingTop="@dimen/hey_distance_8dp"
                    android:paddingBottom="@dimen/hey_distance_8dp">

                    <com.heytap.wearable.support.widget.HeyTextView
                        android:id="@+id/text_channel_original_content_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:text="原文阅读模式"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/profile_entry_text_size" />

                    <com.heytap.wearable.support.widget.HeySwitch
                        android:id="@+id/switch_channel_original_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <com.heytap.wearable.support.widget.HeyTextView
                    android:id="@+id/text_channel_original_content_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/hey_content_horizontal_distance_6_0"
                    android:layout_marginTop="@dimen/hey_distance_4dp"
                    android:text="刷新时抓取原文正文与图片"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/settings_detail_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/delete_channel_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/hey_distance_8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/button_channel_delete"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hey_multiple_item_height"
                    android:background="@drawable/bg_settings_pill"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/hey_content_horizontal_distance_6_0"
                    android:paddingRight="@dimen/hey_distance_10dp"
                    android:paddingTop="@dimen/hey_distance_8dp"
                    android:paddingBottom="@dimen/hey_distance_8dp">

                    <com.heytap.wearable.support.widget.HeyTextView
                        android:id="@+id/text_channel_delete_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:text="删除频道"
                        android:textColor="@color/danger_red"
                        android:textSize="@dimen/profile_entry_text_size" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/hey_distance_20dp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
