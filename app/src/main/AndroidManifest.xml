<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".WatchRssApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WatchRSS"
        android:usesCleartextTraffic="true">
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.WatchRSS">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddRssActivity"
            android:exported="false"
            android:theme="@style/Theme.WatchRSS.Translucent" />
        <activity
            android:name=".FeedActivity"
            android:exported="false"
            android:theme="@style/Theme.WatchRSS.Translucent" />
        <activity
            android:name=".ChannelActionsActivity"
            android:exported="false"
            android:theme="@style/Theme.WatchRSS.Translucent" />
        <activity
            android:name=".ItemActionsActivity"
            android:exported="false"
            android:theme="@style/Theme.WatchRSS.Translucent" />
        <activity
            android:name=".DetailActivity"
            android:exported="false"
            android:theme="@style/Theme.WatchRSS.Translucent" />
        <activity
            android:name=".ChannelDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.WatchRSS.Translucent" />
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.WatchRSS.Translucent" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.WatchRSS.Translucent" />
        <activity
            android:name=".SavedItemsActivity"
            android:exported="false"
            android:theme="@style/Theme.WatchRSS.Translucent" />
        <activity
            android:name=".AboutActivity"
            android:exported="false"
            android:theme="@style/Theme.WatchRSS.Translucent" />
        <activity
            android:name=".InfoActivity"
            android:exported="false"
            android:theme="@style/Theme.WatchRSS.Translucent" />
        <activity
            android:name=".BiliEntryActivity"
            android:exported="false"
            android:theme="@style/Theme.WatchRSS.Translucent" />
        <activity
            android:name=".DouyinEntryActivity"
            android:exported="false"
            android:theme="@style/Theme.WatchRSS.Translucent" />
        <activity
            android:name=".HeytapWidgetDemoActivity"
            android:exported="false"
            android:label="Heytap Widget Demo"
            android:theme="@style/Theme.WatchRSS.Translucent" />
    </application>

</manifest>
