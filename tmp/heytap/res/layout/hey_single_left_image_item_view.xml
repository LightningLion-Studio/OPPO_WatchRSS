<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.heytap.wearable.support.widget.HeyRoundImageAntiAlias
        android:id="@+id/iv_left_icon"
        android:layout_width="@dimen/hey_listitem_lefticon_height_width"
        android:layout_height="@dimen/hey_listitem_lefticon_height_width"
        android:layout_marginRight="@dimen/hey_listitem_left_icon_margin_right"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/HeySingleListItemTextStyle"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <android.view.ViewStub
        android:id="@+id/arrow_viewStub"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/hey_listitem_widget_margin_left"
        android:layout="@layout/hey_arrow_viewstub" />
</merge>