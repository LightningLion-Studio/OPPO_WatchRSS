<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hey_button_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/hey_dialog_round_vertical_btn_top"
    android:paddingBottom="@dimen/hey_dialog_round_layout_large_bottom">

    <com.heytap.wearable.support.widget.HeyShapeButton
        android:id="@+id/negative_id"
        style="@style/HeyRoundButtonTextLargeStyle"/>

    <com.heytap.wearable.support.widget.HeyShapeButton
        android:id="@+id/positive_id"
        android:layout_below="@id/negative_id"
        android:layout_marginTop="@dimen/hey_vertical_button_distance"
        style="@style/HeyRoundButtonTextLargeStyle"/>
</RelativeLayout>