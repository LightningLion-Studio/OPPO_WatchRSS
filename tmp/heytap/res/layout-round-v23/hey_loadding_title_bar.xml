<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/hey_round_title_bar_min_height"
    android:orientation="horizontal"
    android:gravity="bottom|center_horizontal"
    android:paddingBottom="@dimen/hey_title_margin_vertical">

    <android.view.ViewStub
        android:id="@+id/hey_loading_viewstub"
        android:layout_width="@dimen/hey_title_loadding_view_size"
        android:layout_height="@dimen/hey_title_loadding_view_size"
        android:layout="@layout/hey_view_stub_hey_loading" />

    <android.view.ViewStub
        android:id="@+id/progressbar_viewstub"
        android:layout_width="@dimen/hey_title_loadding_view_size"
        android:layout_height="@dimen/hey_title_loadding_view_size"
        android:layout="@layout/hey_view_stub_progressbar" />

    <TextView
        android:id="@+id/back_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/hey_loading_title_textview_marginLeft"
        android:adjustViewBounds="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/hey_group_title_text_size" />
</LinearLayout>