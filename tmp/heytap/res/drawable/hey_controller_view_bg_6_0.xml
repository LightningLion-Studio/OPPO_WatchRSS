<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/hey_controller_view_focused"
        android:state_focused="true"
        android:drawable="@drawable/hey_controller_selected_6_0"/>

    <item
        android:id="@+id/hey_controller_view_unfocused"
        android:state_focused="false"
        android:drawable="@drawable/hey_controller_unselected_6_0"/>

    <transition
        android:drawable="@drawable/hey_controller_view_cancel"
        android:fromId="@+id/hey_controller_view_focused"
        android:toId="@+id/hey_controller_view_unfocused"/>

    <transition
        android:drawable="@drawable/hey_controller_view_choose"
        android:fromId="@+id/hey_controller_view_unfocused"
        android:toId="@+id/hey_controller_view_focused"/>
</animated-selector>