<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:oppo="http://schemas.android.com/apk/res-auto">
    <item
        android:id="@+id/check_on_normal"
        android:drawable="@drawable/hey_checkbox_on"
        android:state_enabled="true"
        oppo:HeyCheckboxStateAllSelect="true"/>

    <item
        android:id="@+id/check_on_disabled"
        android:drawable="@drawable/hey_checkbox_on_disable"
        android:state_enabled="false"
        oppo:HeyCheckboxStateAllSelect="true"/>
    <item
        android:id="@+id/check_off_normal"
        android:drawable="@drawable/hey_checkbox_off"
        android:state_enabled="true"
        oppo:HeyCheckboxStateAllSelect="false"/>
    <item
        android:id="@+id/check_off_disabled"
        android:drawable="@drawable/hey_checkbox_off_disable"
        android:state_enabled="false"
        oppo:HeyCheckboxStateAllSelect="false"/>

    <transition
        android:drawable="@drawable/hey_checkbox_anim_check_on_to_off"
        android:fromId="@+id/check_on_normal"
        android:toId="@+id/check_off_normal" />

    <transition
        android:drawable="@drawable/hey_checkbox_anim_check_off_to_on"
        android:fromId="@+id/check_off_normal"
        android:toId="@+id/check_on_normal" />
</animated-selector>

